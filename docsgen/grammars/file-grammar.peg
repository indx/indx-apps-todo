@import "utils-grammar.peg"

start
	= ps:properties d:description_lines
			{ return { properties: ps, description: d }; }


property
	= "@author" _ n:[^<\n\r]+ _ e:("<" [^>\n\r]+ ">")?
			{ 	if (e) { e = e[1].join(''); }
				return ['author', { name: n.join(''), email: e || undefined }]; }
	/ "@" k:name _ v:comment?
			{ return [k, v]; }
